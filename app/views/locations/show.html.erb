<%= render :partial => '/shared/main_nav' %>

<div id="article_list">
	
<% @articles.each do |article| %>
	<div>
		<h2 id="article_link">
			<%= link_to(article.title, article_path(article.id))%>
		</h2>
		<h4 id="article_pub_info">
			<%= article.author.name %> <%= article.updated_at.to_s.at(5..15)%> 		</h4>
		<div id="article_text_prev">
			<%= article.body.at(0..200) + "..."%>
		</div>
	</div>
<% end %>


