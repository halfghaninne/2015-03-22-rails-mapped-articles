<div class="mobile_main_menu" id="mobile_main_menu" style="display: none;">
  <ul>
    <li>More Stories</li>
    <li><%= link_to("About", about_path) %></li>
		<% if @user ==nil %><li><%= link_to("Sign Up", new_user_path) %></li><% end %>
		<% if @user ==nil %><li><%= link_to("Log In", user_login_path) %></li><% end %>
		<li><%= link_to("Sign Out", user_logout_path) if @user %></li>
  </ul>
</div>

<%= render :partial => '/shared/main_nav' %>

	
<div id="article_list">
	
	<div class="flash">
		<%= flash[:message] %>
	</div>

<% @articles.each do |article| %>
	<div>
		<h2 id="article_link">
			<%= link_to(article.title, article_path(article.id))%>
		</h2>
		<h4 id="article_pub_info">
			<%= article.author.name %> <%= article.updated_at.to_s.at(5..15)%> 		</h4>
		<div id="article_text_prev">
			<%= article.body.at(0..200) + "..."%>
		</div>
	</div>
<% end %>

</div>

<div>

<%= render :partial => '/locations/map_all_embed' %>

</div>