<%= form_for @article do |f| %>
	<%= f.label "title", "Title:" %>
    <%= f.text_field("title") %><br>
	<%= f.label "author", "Author:" %>
	<%= f.collection_select(:author_id, Author.all, :id, :name, :prompt => true)%><br>
    <%= f.label "body", "Article Text:" %><br>
    <%= f.text_area("body") %><br>
    <%= f.submit "Publish" %>
<% end %>