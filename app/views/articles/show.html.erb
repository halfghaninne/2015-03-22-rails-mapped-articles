<%= render :partial => '/shared/mobile_article_show_nav' %>

<div id="page_container">

  <%= render :partial => '/shared/show_nav' %>
  
  <header id="header_image" style="background-image:url(<%= @image %>)"> 
  	<div class="header_text">
  		<h2><%= @article.title %></h2>
  		<h4><%= @article.author.name %>
