    <% end %>
  </div>


  <div id="divider">
  </div>

  <div id="author_info">
  	<p><%= @article.author.auth_info %></p>
  </div>

  <div id="divider">
  </div>

  <div id="map_embed">
  	<%= render :partial => '/locations/map_article_embed' %>
